<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.multipleChoice.MultipleChoiceFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_multiple_choice_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_multiple_choice_answers">


        <TextView
            android:id="@+id/textview_multiple_choice_question"
            style="@style/textViewStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_multiple_choice_answers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_multiple_choice_question"
        app:layout_constraintBottom_toTopOf="@id/layout_multiple_choice_answer0">


        <Button
            android:id="@+id/button_multiple_choice_answer1"
            style="@style/buttonStyle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_multiple_choice_answer2"
            app:layout_constraintBottom_toTopOf="@id/button_multiple_choice_answer3"
            />
        <Button
            android:id="@+id/button_multiple_choice_answer2"
            style="@style/buttonStyle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_multiple_choice_answer1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_multiple_choice_answer4"
            />
        <Button
            android:id="@+id/button_multiple_choice_answer3"
            style="@style/buttonStyle"
            app:layout_constraintTop_toBottomOf="@id/button_multiple_choice_answer1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_multiple_choice_answer4"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <Button
            android:id="@+id/button_multiple_choice_answer4"
            style="@style/buttonStyle"
            app:layout_constraintTop_toBottomOf="@id/button_multiple_choice_answer2"
            app:layout_constraintStart_toEndOf="@id/button_multiple_choice_answer3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_multiple_choice_answer0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_multiple_choice_answers">
        <Button
            android:id="@+id/button_multiple_choice_answer0"
            style="@style/buttonStyle"
            android:layout_width="300dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_multiple_choice_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_multiple_choice_answer0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_points"
            style="@style/textViewStyle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>